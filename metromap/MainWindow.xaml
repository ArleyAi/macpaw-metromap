<mui:ModernWindow
                x:Class="MetroMap.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" xmlns:dxsch="http://schemas.devexpress.com/winfx/2008/xaml/scheduler"
                  Title="MetroMap for MacPaw" 
                  Style="{StaticResource BlankWindow}"
                  Width="980"
                  Height="740"
                  MinHeight="740"
                  MinWidth="980"
    Padding="0" Loaded="ModernWindow_Loaded">
    <Grid>
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden">

        </Frame>
        <Grid Grid.Row="1" Height="50" VerticalAlignment="Bottom">
            <StackPanel Margin="10" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button x:Name="buttonAbout" Content="About" Click="buttonAbout_Click"/>
            </StackPanel>
            <Button x:Name="buttonHome" Visibility="Hidden" Content="Home" Margin="10" HorizontalAlignment="Left" Click="buttonHome_Click"/>
        </Grid>
    </Grid>
</mui:ModernWindow>
